{
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile"
  },
  "postCreateCommand": "./.devcontainer/setup && ./scripts/setup",
  "remoteUser": "root",
  "mounts": [
    "source=/home/,target=/workspaces/dotfiles/helyi,type=bind,consistency=cached"
  ],
  "features": {
    "ghcr.io/devcontainers/features/docker-from-docker:1": {}
  },
  "forwardPorts": [
    8000,
    22112,
    22111,
    3008
  ]
}
